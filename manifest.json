{
  "name": "Context",
  "description": "Understand everything you read",

  "version": "0.1.0",
  "manifest_version": 2,

  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [ "fonts.css", "styles.css"],
      "js": [
        "jquery-2.1.1.min.js",
        "jquery-highlight.js",
        "spinners.min.js",
        "utilities.js",
        "config.js",
        "cardstacks.js",
        "hover-pane.js",
        "content-retriever.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://en.m.wikipedia.org/*"],
      "js": [ "jquery-2.1.1.min.js", "mobile-wikipedia-links.js" ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "images/smallLogo1_48_padding.png",
    "128": "images/smallLogo2_128_padding.png"
  }
}
