{
  "name": "Context",
  "description": "Understand everything you read",

  "version": "0.1.0",
  "manifest_version": 2,

  "background": {
    "scripts": ["scripts/background-page.js"],
    "persistent": true
  },

  "options_page": "options.html",

  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "styles/fonts.css",
        "styles/hover-pane.css"],
      "js": [
        "scripts/jquery-2.1.1.min.js",
        "scripts/Length.min.js",
        "scripts/utilities.js",
        "scripts/config.js",
        "scripts/cardstacks.js",
        "scripts/hover-pane.js",
        "scripts/run-tutorial.js",
        "scripts/content-retriever.js",
        "scripts/content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://en.m.wikipedia.org/*"],
      "js": [ "scripts/jquery-2.1.1.min.js",
          "scripts/mobile-wikipedia-links.js" ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "scripts/*",
    "styles/*",
    "fonts/*",
    "templates/*"
  ],
  "icons": {
    "48": "images/smallLogo1_48_padding.png",
    "128": "images/smallLogo2_128_padding.png"
  }
}
